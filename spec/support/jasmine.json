{
  "spec_dir": "spec",
  "spec_files": [
    "**/*[sS]pec.?(m)js"
  ],
  "helpers": [
    "helpers/**/*.?(m)js"
  ],
  "reporters": [
    {
      "name": "jasmine-junit-reporter",
      "options": {
        "savePath": "./test-results",
        "consolidateAll": false
      },
  "env": {
    "stopSpecOnExpectationFailure": false,
    "random": true
  }
  }
  ]
}
